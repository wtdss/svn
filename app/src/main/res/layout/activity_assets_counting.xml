<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_assets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:context=".main.activity.AssetsActivity">

    <include
        android:id="@+id/layout_header_title_back"
        layout="@layout/layout_header_title_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/assets_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header_title_back"
        android:orientation="horizontal"
        android:paddingBottom="0.5dp">

        <TextView
            android:id="@+id/counting_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/line_bottom_gray_2dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/assets_counting_in"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/counting_finish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/line_bottom_gray_2dp"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="@string/assets_counting_finish"
            android:textColor="@color/black" />
    </LinearLayout>

    <ListView
        android:id="@+id/assets_counting_task_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assets_header"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:divider="@null"
        android:dividerHeight="10dp" />
</RelativeLayout>
